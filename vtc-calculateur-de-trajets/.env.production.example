# Production environment example (NO VALUES).
# Configure these in Render as environment variables.

# Public base URL (production)
APP_URL=

# Shopify (required)
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SCOPES=

# Database (required)
DATABASE_URL=

# SMTP (required for email notifications)
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASS=

# Booking email routing
BOOKING_EMAIL_FROM=
BOOKING_EMAIL_TO=

# Slack (secure config stored encrypted in DB)
CONFIG_ENCRYPTION_KEY=

# DEV fallback only (optional)
SLACK_WEBHOOK_URL=
